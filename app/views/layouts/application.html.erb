<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.15.1/js/all.js"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white pt-1 pb-1">
      <nav class="navbar navbar-expand-lg navbar-light navbar-white">
        <div class="container">
          <h2>Bookers</h2>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="navbar-nav ml-auto">
            <% if user_signed_in? %>

            <p class="nav-item">
              <i class="fas fa-home"></i><%= link_to 'Home', users_path, class: 'nav-link text-white' %>
            </p>
            <p class="nav-item">
              <i class="fas fa-users"></i><%= link_to 'Users', users_path, class: 'nav-link text-white' %>
            </p>
             <p class="nav-item">
              <i class="fas fa-book"></i><%= link_to 'Books', books_path, class: 'nav-link text-white' %>
            </p>
            <p class="nav-item">
              <i class="fas fa-sign-out-alt"></i><%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </p>
            <% else %>
             <p class="nav-item">
              <i class="fas fa-home"></i><%= link_to 'Home', root_path, class: 'nav-link text-white' %>
            </p>
             <p class="nav-item">
              <i class="fas fa-link"></i><%= link_to 'about', top_path, class: 'nav-link text-white' %>
            </p>
            <p class="nav-item">
              <i class="fas fa-user-plus"></i><%= link_to "sign up", new_user_registration_path, class: 'nav-link text-white' %>
            </p>
            <p class="nav-item">
              <i class="fas fa-sign-in-alt"></i><%= link_to "Log In", new_user_session_path, class: 'nav-link text-white' %>
            </p>
            <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>

   </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
