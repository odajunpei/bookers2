<p id="notice"><%= notice %></p>
<div class="container px5 px-sm-0">
    <div class="row">
        <div class= "col-md-3">
            <p><%= render 'users/list', user: current_user %></p>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table>
            <thread>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thread>
            <tbody>  
      <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> </td>
              </tr>
      <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
  