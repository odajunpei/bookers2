 <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |book| %>
       <tr>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> </td>
       </tr>
       <% end %>
    </tbody>
    </table>
 
<%= render 'books/_new', books: @books %>
  </body>
  </html>