<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>        
      </div>
      <div class="form-group">
        <label for="inputIntroduction">introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", placeholder:"自己紹介文"%>
      </div>  
      <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>